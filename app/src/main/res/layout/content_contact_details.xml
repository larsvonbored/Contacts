<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.contactbook.ContactDetailsActivity"
    tools:showIn="@layout/activity_contact_details">

    <ImageView
        android:id="@+id/avatar_chooser"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:src="@drawable/account"
        android:clickable="true"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:padding="4dp">
    </ImageView>

    <EditText
        android:id="@+id/name_chooser"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/hint_name"
        android:inputType="text"
        android:textSize="15sp"
        android:maxLines="1"
        android:nextFocusDown="@+id/last_name_chooser"
        android:gravity="center_vertical"
        android:layout_below="@id/avatar_chooser"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        />
    <EditText
        android:id="@+id/last_name_chooser"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/hint_last_name"
        android:inputType="text"
        android:textSize="15sp"
        android:maxLines="1"
        android:nextFocusDown="@+id/number_chooser"
        android:gravity="center_vertical"
        android:layout_below="@id/name_chooser"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        />
    <EditText
        android:id="@+id/number_chooser"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/hint_number"
        android:maxLines="1"
        android:textSize="15sp"
        android:inputType="phone"
        android:nextFocusDown="@+id/email_chooser"
        android:gravity="center_vertical"
        android:layout_below="@id/last_name_chooser"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        />
    <EditText
        android:id="@+id/email_chooser"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/hint_email"
        android:maxLines="1"
        android:textSize="15sp"
        android:inputType="textEmailAddress"
        android:gravity="center_vertical"
        android:layout_below="@id/number_chooser"
        android:imeOptions="actionDone"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        />
</RelativeLayout>
